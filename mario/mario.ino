#include <HT1632.h>
#include <images.h>

const byte SPRITE [2][32] = {
  // Sprite 1
  // Green layer
  { 0b00000000, 0b11100000, 0b00000000, 0b11100110, 0b00000001, 0b11000111, 0b00011101, 0b10000011, 0b00111101, 0b11000001, 0b00111111, 0b11000000, 0b00111110, 0b00000000, 0b00111110, 0b10000000, 0b00111111, 0b00000000, 0b00111110, 0b10000000, 0b00111110, 0b10000000, 0b00011110, 0b11000000, 0b00011100, 0b11011100, 0b00001000, 0b11111100, 0b00000000, 0b11000000, 0b00000000, 0b00000000 },
  // Red layer
  { 0b00000000, 0b11100000, 0b00000000, 0b11100000, 0b00000000, 0b01001000, 0b00000000, 0b00011100, 0b01011000, 0b00111100, 0b11000110, 0b00111100, 0b11010111, 0b11111000, 0b11111111, 0b11111000, 0b11111110, 0b11111000, 0b11001010, 0b01111100, 0b01110010, 0b01111100, 0b01011010, 0b00011100, 0b01011000, 0b10000000, 0b00001000, 0b11000000, 0b00000000, 0b11000000, 0b00000000, 0b00000000 }
};

const byte WIDTH = 16;
const byte HEIGHT = 16;

void setup() {
    HT1632.setCLK(D0);
    HT1632.begin(D1, D2, D3);
}

void loop() {
    for (byte i = 0; i < 2; i++) {
        HT1632.selectChannel(i);
        HT1632.drawImage(SPRITE[i], WIDTH, HEIGHT, 0, 0);
    }
    HT1632.render();
    delay(200);
}
